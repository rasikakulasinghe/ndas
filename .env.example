# Environment Configuration for NDAS Video Processing Pipeline

# Django Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (for production use PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/ndas

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration
CELERY_WORKER_CONCURRENCY=2
CELERY_TASK_ALWAYS_EAGER=False

# Video Processing Configuration
FFMPEG_BINARY=ffmpeg
FFPROBE_BINARY=ffprobe
MAX_VIDEO_SIZE=1073741824  # 1GB in bytes
MAX_VIDEO_DURATION=300     # 5 minutes in seconds

# File Upload Settings
MAX_UPLOAD_SIZE=104857600  # 100MB for general uploads

# Static and Media Files
STATIC_URL=/static/
MEDIA_URL=/media/

# Security Settings (for production)
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# Email Configuration (for notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Monitoring and Logging
# SENTRY_DSN=https://your-sentry-dsn-here

# Performance Settings
CELERY_WORKER_MAX_MEMORY_PER_CHILD=524288000  # 512MB
CELERY_TASK_SOFT_TIME_LIMIT=1800  # 30 minutes
CELERY_TASK_TIME_LIMIT=3600       # 1 hour
